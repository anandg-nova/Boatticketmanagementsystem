      ]
    },
    {
      "name": "Rides",
      "item": [
        {
          "name": "Get All Rides",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/rides",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rides"]
            }
          }
        },
        {
          "name": "Check Availability",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/rides/check-availability",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rides", "check-availability"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"rideId\": \"ride-id\",\n    \"date\": \"2025-03-30\",\n    \"timeSlot\": \"10:00 AM\"\n}"
            }
          }
        },
        {
          "name": "Get Rides by Boat",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/rides/boat/:boatId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rides", "boat", ":boatId"],
              "variable": [
                {
                  "key": "boatId",
                  "value": "boat-id"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/bookings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "bookings"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"rideId\": \"ride-id\",\n    \"date\": \"2025-03-30\",\n    \"timeSlot\": \"10:00 AM\",\n    \"quantity\": 2,\n    \"customerName\": \"John Doe\",\n    \"customerEmail\": \"john@example.com\",\n    \"customerPhone\": \"1234567890\"\n}"
            }
          }
        },
        {
          "name": "Get Booking",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/bookings/:bookingId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "bookings", ":bookingId"],
              "variable": [
                {
                  "key": "bookingId",
                  "value": "booking-id"
                }
              ]
            }
          }
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/bookings/:bookingId/cancel",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "bookings", ":bookingId", "cancel"],
              "variable": [
                {
                  "key": "bookingId",
                  "value": "booking-id"
                }
              ]
            }
          }
        }
